generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  first_name    String
  last_name     String
  password      String
  role          Role    @default(USER)
  refresh_token String? 
  // children      Child[]
