// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String     @id
  email    String     @unique
  name     String
  password String
  token    String?    @db.Text
  stunting Stunting[]
}

model Stunting {
  id              Int    @id @default(autoincrement())
  name            String
  sex             String
  age             Float
  birth_weight    Float
  birth_length    Float
  body_weight     Float
  body_length     Float
  asi_eksklusif   String
  status_stunting String

  user    Users  @relation(fields: [user_id], references: [id])
  user_id String
}

model Articles {
  id           Int      @id @default(autoincrement())
  title        String
  excerpt      String
  content      String   @db.Text
  published_at DateTime
  image        String?
}

model Info {
  id        Int     @id @default(autoincrement())
  image_url String?
}
